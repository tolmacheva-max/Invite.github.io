        }

        .orb {
            position: absolute;
            border-radius: 50%;
            filter: blur(80px);
            animation: pulse 4s ease-in-out infinite;
        }

        .orb1 {
            top: 0;
            left: 25%;
            width: 320px;
            height: 320px;
